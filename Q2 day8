#include <stdio.h>

int main() {
    int n;
    int last, next;
    int flag = 1;  // assume ascending

    printf("Enter a number: ");
    scanf("%d", &n);

    // Convert negative number to positive
    if (n < 0)
        n = -n;

    last = n % 10;   // get last digit
    n /= 10;

    while (n != 0) {
        next = n % 10;   // get next digit
        if (next > last) {
            flag = 0;    // not ascending
            break;
        }
        last = next;
        n /= 10;
    }

    if (flag)
        printf("Digits are in ascending order");
    else
        printf("Digits are not in ascending order");

    return 0;
}